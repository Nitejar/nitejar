NODE_ENV=development
APP_BASE_URL=http://localhost:3000

# Database (Kysely ORM)
# For SQLite (default): leave unset or use a file path
# DATABASE_URL=./data/nitejar.db
# For Postgres: use a connection string
# DATABASE_URL=postgres://user:password@host:5432/database

# Encryption key for secrets (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ENCRYPTION_KEY=your-64-char-hex-key-here

# Sprites API (for agent execution environments)
# Get token from https://sprites.dev
# SPRITES_TOKEN=your-sprites-token-here

# Telegram Bot (optional, for Telegram integration)
# Get token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your-bot-token-here

# GitHub App authentication (for production)
GITHUB_WEBHOOK_SECRET=
# GITHUB_APP_ID=
# GITHUB_PRIVATE_KEY=

# Legacy Postgres (will be removed)
# POSTGRES_URL=postgres://nitejar:nitejar@localhost:5432/nitejar
