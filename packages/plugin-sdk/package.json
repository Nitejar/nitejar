{
  "name": "@nitejar/plugin-sdk",
  "version": "0.1.0",
  "private": false,
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src --no-error-on-unmatched-pattern",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@nitejar/eslint-config": "workspace:*",
    "@nitejar/typescript-config": "workspace:*",
    "@types/node": "^22.10.5",
    "eslint": "^8.57.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
